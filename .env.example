# SATIM Configuration
# Copy this file to .env and fill in your credentials

# Environment: sandbox | production
NODE_ENV=sandbox

# SATIM Credentials (provided by SATIM/GIE Mon√©tique)
# Get your credentials from SATIM account manager
SATIM_TERMINAL_ID=your_terminal_id_here
SATIM_USERNAME=your_username_here
SATIM_PASSWORD=your_password_here

# Merchant Information
MERCHANT_NAME=Your Merchant Name
MERCHANT_ID=your_merchant_id

# API URLs (auto-configured based on NODE_ENV)
# Sandbox: https://test2.satim.dz/payment/rest
# Production: https://satim.dz/payment/rest

# Return URLs
RETURN_URL=https://yourdomain.com/payment/return
FAIL_URL=https://yourdomain.com/payment/failed

# Timeouts (in milliseconds)
API_TIMEOUT=30000
PAYMENT_SESSION_TIMEOUT=900000

# Logging
LOG_LEVEL=info
LOG_TO_FILE=true
LOG_DIR=./logs

# Server Configuration (for callback endpoint)
SERVER_PORT=3000
SERVER_HOST=0.0.0.0

# Payment Language (AR, FR, EN)
PAYMENT_LANGUAGE=fr
